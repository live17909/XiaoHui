<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <com.zbase.view.TransMaskFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:maskCorner="10"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_shop_default3" />

    </com.zbase.view.TransMaskFrameLayout>

    <com.zbase.view.VerifyCodeTextView
        android:id="@+id/verifyCodeTextView"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="5dp"
        android:background="@drawable/rectangle_solid_c3_corner_3dp"
        android:text="@string/obtain_verify_code" />
</LinearLayout>